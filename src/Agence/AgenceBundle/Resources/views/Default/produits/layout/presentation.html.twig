{% extends "::layout/layout.html.twig" %}

{% block title %}{{ danseuse.nom }}{% endblock %}
{% block description %}{{ danseuse.description }}{% endblock %}

{% block body %}

<div class="container">
		<div class="row">
			<div class="span3">
	            <div class="well">
				    <ul class="nav nav-list">
				        <li class="nav-header">{{ danseuse.nom }}</li>
				    </ul>
				</div>

            </div>
			
			<div class="span9">
				<div class="row">
					<div class="span5">
						<img src="{{ asset(danseuse.image.AssetPath) }}" alt="{{ danseuse.image.name }}">
					</div>

					<div class="span4">
						<h4>{{ danseuse.nom }}</h4>
						<h5>{{ danseuse.categories }}</h5>
						<p>{{ danseuse.description }}</p>
						<h4>{{ danseuse.prix|tva(danseuse.tva.multiplicate) }} €</h4>
						
						{% if panier[danseuse.id] is not defined %}
                        <form action="{{ path('ajouter', { 'id' : danseuse.id }) }}" method="get">
                            <select name="qte" class="span1">
                                {% for i in 1..99 %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>

                            <div>
                                <button class="bouton">Ajouter à ma demande</button>
                            </div>
                        </form>
                        {% else %}
                        
                            <div>
                                <a href="{{ path('panier') }}" class="bouton">La danseuse est déjà dans votre commande</a>
                            </div>
                        {% endif %}
						
					</div>
				</div>

			<div class="span10">
				<section>
			        <ul class="lb-album">
			            <li>
			                <a href="#image-1">
			                    <img src="images/thumbs/1.jpg" alt="image01">
			                    <span>Pointe</span>
			                </a>
			                <div class="lb-overlay" id="image-1">
			                    <a href="#page" class="lb-close">x Close</a>
			                    <img src="images/full/1.jpg" alt="image01" />
			                </div>
			            </li>
			        </ul>
			    </section>
			</div>
			
			</div>
		</div>
	</div>
{% endblock %}
