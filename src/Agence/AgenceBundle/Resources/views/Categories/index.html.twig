{% extends "::layout/layout.html.twig" %}

{% block body -%}
    <h1>Categories list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% if entities|length == 0 %}
            <tr>
                <td colspan="3">Aucune catégorie dans votre liste.</td>
            </tr>
        {% endif %}

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_categories_show', { 'id': entity.id }) }}">voir le profil</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_categories_edit', { 'id': entity.id }) }}">modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_categories_new') }}">
                Création d'une nouvelle catégorie
            </a>
        </li>
    </ul>
    {% endblock %}
